\section*{第八题}
\addcontentsline{toc}{section}{第八题}
离差矩阵函数
<<>>=
#先建立中心化每个变量值的函数
Center <- function(x) {
unlist(lapply(x, function(p) (p-mean(x))))
}
#求离差矩阵的函数
DispMatrix <- function(M) {
  m <- M
  m <-unname(m)
  for(i in 1:dim(m)[2]) {
    m[, i] <- Center(m[, i])
  }
   return(t(m)%*%m)
}
@
决定系数函数,本函数以一元为例
<<>>=
r.fun <- function(m) {
  x <- model.matrix(~ m[, 1],m)
  y <- m[, 2]
  coeff <- solve(t(x)%*%x)%*%t(x)%*%y
  y.hat <- x%*%coeff
  cor(y, y.hat)
}
@
